
@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row mt-5">
        <!-- Tổng Quan Doanh Thu -->
        <div class="col-md-6 col-lg-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Doanh Thu</div>
                <div class="card-body">
                    <h5 class="card-title">Hôm nay</h5>
                    <p class="card-text">$10,000</p>
                </div>
            </div>
        </div>
        <!-- Số Lượng Vé Đã Bán -->
        <div class="col-md-6 col-lg-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Vé Đã Bán</div>
                <div class="card-body">
                    <h5 class="card-title">Hôm nay</h5>
                    <p class="card-text">1,200 vé</p>
                </div>
            </div>
        </div>
        <!-- Thống Kê Phim -->
        <div class="col-md-6 col-lg-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-header">Phim Đang Chiếu</div>
                <div class="card-body">
                    <h5 class="card-title">Số lượng phim</h5>
                    <p class="card-text">15 phim</p>
                </div>
            </div>
        </div>
        <!-- Lịch Chiếu -->
        <div class="col-md-6 col-lg-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Lịch Chiếu</div>
                <div class="card-body">
                    <h5 class="card-title">Suất chiếu sắp tới</h5>
                    <p class="card-text">5 suất</p>
                </div>
            </div>
        </div>
    </div>
</div>
